{% extends 'base.html.twig' %}

{% block body %}
    <br/><br/><br/>
    <div class="container">
        <h1>Connexion</h1>
        <form action="{{ path('security_login') }}" method="post">
            <div class="form-group">
                <label for="">Identifiant :</label>
                <input class="form-control" type="text" placeholder="Votre identifiant" required name="_username">
            </div>
            <div class="form-group">
                <label for="">Mot de passe :</label>
                <input class="form-control" type="password" placeholder="Votre mot de passe" required name="_password">
            </div>
            <button class="btn btn-success" type="submit">Se connecter</button>            
        </form>
    </div>

{% endblock %}